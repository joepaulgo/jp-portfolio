---
import backgroundVideo from '../assets/funky-lookin-guy.mp4';
import HeroBlock from '../components/HeroBlock.astro';
import PortfolioSections from '../components/PortfolioSections.astro';
---

<div class="page-container">

  <!-- Hero Section -->
  <section class="hero-section">
    <video class="background-video" autoplay muted loop playsinline>
      <source src={backgroundVideo} type="video/mp4">
    </video>
    <div class="hero-content">
      <HeroBlock />
    </div>
  </section>

  <!-- Portfolio Content Sections -->
  <section class="portfolio-section">
    <PortfolioSections />
  </section>
</div>

<style>
  .page-container {
    width: 100%;
    height: 100%;
    overflow-x: hidden;
  }

  /* Hero Section */
  .hero-section {
    position: relative;
    width: 100%;
    height: 95vh;
    overflow: hidden;
  }

  .background-video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    z-index: -1;
  }

  .hero-content {
    position: relative;
    height: 80vh;
    display: flex;
    align-items: flex-end;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* Portfolio Section */
  .portfolio-section {
    padding: 3rem 0;
    width: 100%;
  }

  /* Responsive adjustments */
  @media screen and (max-width: 768px) {
    .hero-content {
      padding: 0 15px;
      width: auto;
    }
  }
</style>
