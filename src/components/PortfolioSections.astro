<style>
  .portfolio-container {
    display: flex;
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
    gap: 3rem; /* Increased gap between main columns */
  }

  /* Timeline section */
  .timeline-container {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .timeline-item {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .timeline-label {
    display: block;
    font-family: 'Montserrat', sans-serif;
    font-size: 0.9rem;
    color: #666;
    margin-bottom: 0.25rem;
  }

  .timeline-title {
    font-family: 'Montserrat', sans-serif;
    font-weight: 600;
    font-size: 1.75rem;
    margin: 0 0 0.5rem 0;
  }

  .timeline-description {
    font-family: 'Crimson Pro', serif;
    font-size: 1.1rem;
    margin: 0 0 1rem 0;
  }

  .timeline-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Info sections */
  .info-container {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .info-section {
    margin-bottom: 1.5rem;
  }

  .section-title {
    font-family: 'Montserrat', sans-serif;
    font-weight: 600;
    font-size: 1.5rem;
    margin: 0 0 1rem 0;
  }

  .section-text {
    font-family: 'Crimson Pro', serif;
    font-size: 1.1rem;
    line-height: 1.6;
    margin: 0;
  }

  .section-list {
    list-style-type: disc;
    padding-left: 1.2rem;
    margin: 0.5rem 0 1rem 0;
  }

  .section-list li {
    font-family: 'Crimson Pro', serif;
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
  }

  .view-all {
    display: block;
    text-decoration: none;
    font-family: 'Montserrat', sans-serif;
    font-size: 1rem;
    color: #000;
    margin-top: 0.5rem;
  }

  .view-all:hover {
    text-decoration: underline;
  }

  /* Responsive adjustments */
  @media (max-width: 968px) {
    .portfolio-container {
      flex-direction: column;
    }

    .timeline-container, .info-container {
      width: 100%; /* Full width on mobile */
    }
    
    /* Make timeline sections more compact on mobile */
    .timeline-item {
      margin-bottom: 2rem;
    }
    
    /* Adjust spacing between info sections */
    .info-section {
      margin-bottom: 2.5rem;
      padding-bottom: 1.5rem;
      border-bottom: 1px solid #eee;
    }
    
    .info-section:last-child {
      border-bottom: none;
    }
  }
  
  /* Small mobile devices */
  @media (max-width: 480px) {
    .portfolio-container {
      padding: 1.5rem 0.75rem;
    }
    
    .timeline-title {
      font-size: 1.5rem;
    }
    
    .section-title {
      font-size: 1.3rem;
    }
  }
</style>
